<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_58c1f8"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/self_save_btn"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:background="@drawable/self_save_btn_back"
        android:text="@string/self_save"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/friend_bomb_button"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:background="@drawable/friend_bomb_btn_back"
        android:layout_marginTop="142dp"
        android:layout_marginStart="160dp"
        android:text="@string/friend_bomb"
        android:textColor="@android:color/white"
        android:layout_marginLeft="160dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="194dp"
        android:src="@drawable/house"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
