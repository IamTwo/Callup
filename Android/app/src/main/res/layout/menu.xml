<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_967bdc"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/selfSaveButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/self_save_btn_back"
        android:text="@string/self_save"
        android:textSize="15sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/friendBombButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/friend_bomb_btn_back"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="20dp"
        android:text="@string/friend_bomb"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="194dp"
        android:src="@drawable/house"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
