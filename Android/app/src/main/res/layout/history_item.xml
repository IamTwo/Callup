<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/friendLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp">
        <dlmj.callup.UI.View.CircleImageView
            android:id="@+id/friendPhotoCircleImageView"
            android:layout_width="44dp"
            android:layout_height="44dp"
            view:type="round"
            view:borderRadius="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/gray_b3afb9"
            android:padding="5dp"
            android:layout_marginLeft="5dp">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/friendSceneImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="5dp"
                android:background="@color/red_d95753"/>

            <TextView
                android:id="@+id/friendMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/friendAcceptButton"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/gray_b3afb9"
            android:padding="5dp">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/meSceneImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@color/red_d95753"/>

            <TextView
                android:id="@+id/meMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/meAcceptButton"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <dlmj.callup.UI.View.CircleImageView
            android:id="@+id/mePhotoCircleImageView"
            android:layout_width="44dp"
            android:layout_height="44dp"
            view:type="round"
            view:borderRadius="5dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</RelativeLayout>